    <% /* %> 
    <% console.log(files) %>
    <% */ %>
    

    <div class="list">
        <ul class="list-header">
            <li>File tree</li>
            <li>Open Source License</li>
            <li>Copyright</li>
        </ul>
        <div class="list-body">
            <% for (let i = 0; i < files?.length; i++) { %>
                <ul>
                    <li 
                        onclick="getData(event)" 
                        class="<%= files[i]?.type === 'dir' ? 'dir' : 'file' %> <%= files[i]?.isKeyword ? 'bold' : '' %> "
                        data-url=<%= files[i]?.link %>
                    >
                         <i class="fa fa-light<%= files[i]?.type === 'dir' ? ' fa-folder' : ' fa-file' %>"></i>
                        <%= files[i]?.name %><%= files[i]?.type === 'dir' ? '/' : '' %>
                    </li>
                    <li class="license"><%= files[i]?.license %></li>
                    <li class="copyright"><%= files[i]?.value %></li>
                </ul>
            <% } %>
        </div>
    </div>
    <% /* %> --- <% */ %>
    <script src="scripts/index.js"></script>
</body>
</html>